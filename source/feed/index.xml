---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ site.title }}</title>
    <link href="http://{{ site.url }}/feed/" rel="self"/>
    <link href="http://{{ site.url }}/"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>http://{{ site.url }}/</id>
    <author>
        <name>{{ site.author }}</name>
        <email>{{ site.email }}</email>
    </author>
    {% for item in site.posts %}
        {% if item.layout == 'post' %}
            <entry>
              <title>{{ item.title | xml_escape }}</title>
              <link href="http://{{ site.url }}{{ item.url }}"/>
              <updated>{{ item.date | date_to_xmlschema }}</updated>
              <id>http://{{ site.url }}{{ item.id }}</id>
              <content type="html">{{ item.content | xml_escape }}</content>
            </entry>
        {% endif %}
    {% endfor %}
</feed>
